<div class="form-title text-center">
  <h2 class="text-dark">Add Department</h2>
</div>
<button class="button-54" role="button" onclick="location.href='/mngdept'">Manage Department</button>

<div class="container mt-0 card" >
<form action="/api/dept" method="POST" id="department">
    
    <div class="form-column pl-3 pt-3 pr-3">
        <div class="form-group col-md-4">
          <label for="depname">Department Name</label>
          <input type="text" class="form-control" name="depname" placeholder="Department Name" required>
        </div>
        <div class="form-group col-md-4 pl-3">
          <label for="short">Department Short Name</label>
          <input type="text" class="form-control" name="short" value="" placeholder="Short Name" required>
      </div>
      <div class="form-group col-md-4 pl-3">
        <label for="code">Department Code</label>
        <input type="text" class="form-control" name="code" value="" placeholder="Department Code" required>
    </div>
    </div>
    <div class="form-group p-3">
    <button type="submit" class="btn btn-primary">Add Department</button>
    </div>
</form>
</div>



  
