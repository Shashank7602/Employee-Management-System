   <section>
    <div class="form-title text-center">
        <h2 class="text-dark">Update Employee Details</h2>
        <h6>Use the form below to Update</h6>
    </div>
    <div>
    <button class="button-54" role="button" onclick="location.href='/adminHome'">All Users</button>

    <div class="container mt-0 card" id="contain">
   


        <form method="post" id="update_user" action="admin/editUser/<%=user._id%>">
        
        <div class="form-row pl-3 pt-3 pr-3">
            <div class="form-group col-md-4">
              <label for="empid">Employee ID</label>
              <input type="text" class="form-control" name="empid" value="<%= user.empid%>" disabled>
            </div>
            <div class="form-group col-md-4 pl-3">
              <label for="name">Full Name</label>
              <input type="hidden" name="id"value="<%= user._id %>">
              <input type="text" class="form-control" name="name" value="<%= user.name%>">
          </div>
    
         <div class="form-group pl-4">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
         </div>
         </div>
            <div class="form-row pl-3">
               <div class="form-group col-md-4">
                <label for="Email">Email</label>
                <input type="email" class="form-control" name="email" value="<%= user.email%>">
               </div>
               <div class="form-group col-md-4 pl-5">
                <label for="gender" class="text-dark">Gender</label>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
                    <label for="radio-2" class="radio-label">Male</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-3" name="gender" value="Female"  <%= user.gender == 'Female' ? 'checked' : '' %> >
                    <label for="radio-3" class="radio-label">Female</label>
                </div>
               </div>
            </div>
         <div class="form-row pl-3">
         <div class="form-group col-md-5">
          <label for="inputAddress">Address</label>
          <input type="text" class="form-control" name="address" value="<%= user.address%>">
         </div>
         <div class="form-group col-md-3">
          <label for="inputAddress2">City/Town </label>
          <input type="text" class="form-control" name="city" value="<%= user.city%>">
         </div>
         
         <div class="form-group col-md-2">
          <label for="company">Company</label>
          <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="company">          
            <option selected><%= user.company%></option>
            <option value="NBPDCL" name="company">NBPDCL</option>
            <option value="BSPHCL" name="company">BSPHCL</option>
            <option value="SBPDCL" name="company">SBPDCL</option>
            <option value="BSPTCL" name="company">BSPTCL</option>
            <option value="BSPGCL" name="company">BSPGCL</option>
          </select>
         </div>
           </div>
         <div class="form-row pl-3">
          <div class="form-group col-md-4">
            <label for="inputAddress2">Phone Number</label>
            <input type="text" class="form-control" name="number" value="<%= user.number%>">
          </div>
          <div class="form-group col-md-4">
            <label for="department">Department</label>
            <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="department">          
                <option selected><%= user.department%></option>
              <option value="IT Cell">IT Cell</option>
              <option value="Human Resource and Administration">Human Resource and Administration</option>
              <option value="Data Center">Data Center</option>
              <option value="CGRF">CGRF</option>
            </select>
          </div>
        </div>
        <div class="form-group pl-3">
    
        <button type="submit" class="btn btn-primary" id="update" onclick="return alert('Employee Updated Successfully')">Save</button>
      </form>
    </div>
    
  



