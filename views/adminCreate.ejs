
<%- include('partials/navbar')%>
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



    <section>

        <div class="form-title text-center">
            <h2 class="text-dark">Add Employee</h2>
        </div>
        <div>
        <button class="button-54" role="button" onclick="location.href='/adminHome'">All Users</button>
        <div class="container mt-0 card" id="contain">



            <form action="createUser" method="POST">

                <div class="form-row pl-3 pt-3 pr-3">
                    <div class="form-group col-md-4">
                        <label for="empid">Employee ID</label>
                        <input type="text" class="form-control" name="empid" placeholder="Must be Unique!" required
                            id="empid">
                    </div>
                    <div class="form-group col-md-4 pl-3">
                        <label for="name">Full Name</label>
                        <input type="hidden" name="id" value="">
                        <input type="text" class="form-control" name="name" value="" placeholder="Full Name" required
                            id="name">
                    </div>

                    <div class="form-group pl-4">
                        <label for="gender">Status</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-4" name="status" value="Active">
                            <label for="radio-4" class="radio-label">Active</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-5" name="status" value="Inactive">
                            <label for="radio-5" class="radio-label">Inactive</label>
                        </div>
                    </div>
                </div>
                <div class="form-row pl-3">
                    <div class="form-group col-md-4">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="example@gmail.com" required
                            id="email">
                    </div>
                    <div class="form-group col-md-4 pl-5">
                        <label for="gender">Gender</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-2" name="gender" value="Male">
                            <label for="radio-2" class="radio-label">Male</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-3" name="gender" value="Female">
                            <label for="radio-3" class="radio-label">Female</label>
                        </div>
                    </div>


                </div>

                <div class="form-row pl-3 pt-n2">
                    <div class="form-group col-md-4">
                        <label for="inputPassword4">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" required
                            id="password">
                    </div>
                </div>
                <div class="form-row pl-3">
                    <div class="form-group col-md-5">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" name="address" placeholder="Address">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputAddress2">City/Town </label>
                        <input type="text" class="form-control" name="city" placeholder="City/Town">
                    </div>

                    <div class="form-group col-md-2">
                        <label for="company">Company</label>
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="company">
                            <option selected>Company..</option>
                            <option value="NBPDCL" name="company">NBPDCL</option>
                            <option value="BSPHCL" name="company">BSPHCL</option>
                            <option value="SBPDCL" name="company">SBPDCL</option>
                            <option value="BSPTCL" name="company">BSPTCL</option>
                            <option value="BSPGCL" name="company">BSPGCL</option>
                        </select>
                    </div>
                </div>
                <div class="form-row pl-3">
                    <div class="form-group col-md-4">
                        <label for="inputAddress2">Phone Number</label>
                        <input type="text" class="form-control" name="number" placeholder="Phone Number">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="department">Department</label>
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="department">
                            <option selected>Department..</option>
                            <option value="IT Cell">IT Cell</option>
                            <option value="Human Resource and Administration">Human Resource and Administration
                            </option>
                            <option value="Data Center">Data Center</option>
                            <option value="CGRF">CGRF</option>
                        </select>
                    </div>
                </div>
                <div class="form-group pl-3">

                    <button type="submit" class="btn btn-primary" id="add" onclick="return alert('Employee added Successfully')">Add Employee</button>
                    <% if(locals.message){ %>
                        <h6 class="alter alert-danger text-capitalize text-center rounded-3">
                            <%= message %>
                        </h6>
                        <% } %>
                </div>
            </form>




            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
                integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                crossorigin="anonymous"></script>

            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
                integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
                integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
                crossorigin="anonymous"></script>


        </div>
    </div>
    </section>
    <%- include('partials/footer')%>
